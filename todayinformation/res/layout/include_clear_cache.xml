<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mintitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp500"
            android:layout_marginTop="@dimen/dp2"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认清除图片缓存吗？"
            android:textColor="#505050"
            android:textSize="@dimen/sp55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DCDCDC"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancle_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp157"
                android:layout_marginTop="@dimen/dp2"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="@dimen/sp50" />

            <TextView
                android:id="@+id/ok_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp157"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_marginTop="@dimen/dp2"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="确定"
                android:textColor="#505050"
                android:textSize="@dimen/sp50" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>